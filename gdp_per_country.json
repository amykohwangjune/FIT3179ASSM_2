{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 700,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/amykohwangjune/FIT3179_ASSM2/main/worldmap.json",
    "format": {
      "type":"topojson",
      "feature": "map"
    }
  },
  "transform": [
    {
      "lookup": "properties.admin",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/amykohwangjune/FIT3179_ASSM2/main/2019.csv",
          "format": {
            "type":"csv"
          }
        },
        "key": "Country or region",
        "fields": ["GDP per capita"]
      }
    }
  ],
  "mark": {"type":"geoshape"},
  "encoding": {
    "color": {
      "field": "GDP per capita",
      "type":"quantitative",
      "scale": {"type":"linear"}
    },
    "tooltip": [
      {"field": "properties.admin", "type": "nominal", "title": "Country"},
      {"field": "GDP per capita", "type": "quantitative", "title": "GDP", "format": ".2f"}
    ]
  }
}
